<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/baristaregular</item>
    </style>

    <style name="MainActivityButtons">
        <item name="android:textColor"></item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/buttonYellow</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="MyProfileTextStyle" parent="@android:style/TextAppearance.Material.Medium">
        <item name="android:fontFamily">@font/baristaregular</item>
        <item name="android:textColor">@android:color/darker_gray</item>

    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
